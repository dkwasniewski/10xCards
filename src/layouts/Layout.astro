---
import "../styles/global.css";
import { Header } from "@/components/layout/Header";

interface Props {
  title?: string;
  user?: {
    id: string;
    email: string;
  } | null;
}

// Get user from Astro.locals (set by middleware) if not explicitly passed
const userFromLocals = Astro.locals.user
  ? {
      id: Astro.locals.user.id,
      email: Astro.locals.user.email ?? "",
    }
  : null;

const { title = "10x Astro Starter", user = userFromLocals } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <Header client:load user={user} />
    <slot />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
