---
import Layout from "@/layouts/Layout.astro";
import { LoginForm } from "@/components/auth/LoginForm";

export const prerender = false;

// Redirect authenticated users to /generate
const session = Astro.locals.session;
if (session) {
  return Astro.redirect("/generate");
}

// Extract redirect parameter and validate it
const url = new URL(Astro.request.url);
const redirectParam = url.searchParams.get("redirect");

// Validate redirect URL to prevent open redirect vulnerabilities
let redirectTo = "/generate";
if (redirectParam) {
  try {
    // Only allow relative paths (no external redirects)
    if (redirectParam.startsWith("/") && !redirectParam.startsWith("//")) {
      redirectTo = redirectParam;
    }
  } catch {
    // Invalid redirect parameter, use default
    redirectTo = "/generate";
  }
}

// Extract error/success messages from URL params (if any)
const error = url.searchParams.get("error");
const message = url.searchParams.get("message");
---

<Layout title="Login - 10xCards">
  <main class="min-h-screen flex items-center justify-center p-4">
    <LoginForm client:load redirectTo={redirectTo} initialError={error} initialMessage={message} />
  </main>
</Layout>

